{% liquid
  assign products = products | default: section.settings.products
  assign image = image | default: section.settings.image
%}

<div id="lookbookModal" class="modal">
  <div class="modal-content" style="background-color: {{ background_color }};">
    {% comment %} close button - mobile only {% endcomment %}
    <button class="close-button">
      <span class="close-button-icon">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M18 6L6 18" stroke="black" stroke-width="2" stroke-linecap="round"/>
          <path d="M6 6L18 18" stroke="black" stroke-width="2" stroke-linecap="round"/>
        </svg>
      </span>
    </button>
    <div class="look-image">
      <img src="{{ image | img_url: 'master' }}" alt="Look Image">
    </div>
    <div class="product-list" style="overflow-y: auto; max-height: 100%;">
      {% for product in products %}
        <div class="product-item">
          <img
            src="{{ product.featured_image | image_url: width: 300 }}"
            alt="{{ product.title }}"
            class="product-image"
          >

          <div class="product-details">
            <div class="product-content">
              <div class="product-header">
                <h3 class="product-title">{{ product.title }}</h3>
                <span class="product-price">
                  <span class="product-price-value">{{ product.price | money }}</span>
                  {% if product.compare_at_price > product.price %}
                    <span class="product-compare-price">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                </span>
              </div>

              <div class="product-description">
                {{ product.description | truncate: 100 }}
              </div>
            </div>

            <div class="product-actions">
              {% if product.variants.size > 1 %}
                <select id="variant-select-{{ product.id }}" class="variant-select">
                  {% for variant in product.variants %}
                    <option value="{{ variant.id }}">{{ variant.title }}</option>
                  {% endfor %}
                </select>
              {% else %}
                <span class="one-size">One size</span>
                <input type="hidden" value="{{ product.variants.first.id }}" class="variant-select">
              {% endif %}

              {% comment %} if available {% endcomment %}
              {% if product.available %}
                <button
                  class="add-to-cart-btn"
                  data-product-id="{{ product.id }}"
                >
                  Add to bag
                </button>
              {% else %}
                {% comment %} if not available {% endcomment %}
                <button class="add-to-cart-btn disabled" disabled>Sold out</button>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .modal {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.55);
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 9999; /* HIGH z-index */
  }

  .modal-content {
    background: #fff;
    width: 90vw;
    padding: 15px;
    max-width: 1200px;
    height: 90vh;
    display: flex;
    border-radius: 0;
    overflow: hidden;

    position: relative;
  }

  .close-button {
    position: absolute;
    top: 20px;
    right: 20px;
    width: 35px;
    height: 35px;
    background: white;
    border-radius: 50%;
    border: none;
    cursor: pointer;

    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.1);
  }

  .close-button-icon {
    height: 20px;
  }

  @media screen and (min-width: 768px) {
    .close-button {
      display: none;
    }
  }

  .look-image {
    width: 50%;
    height: 100%;
    flex-shrink: 0;
  }

  .look-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;

    object-position: top;
  }

  .product-list {
    width: 50%;
    padding: 0 20px;
    overflow-y: auto;
    box-sizing: border-box;
  }

  .product-list::-webkit-scrollbar {
    width: 4px;
  }

  .product-list::-webkit-scrollbar-track {
    background: transparent;
  }

  .product-list::-webkit-scrollbar-thumb {
    background-color: #999;
    border-radius: 10px;
  }

  .product-list::-webkit-scrollbar-thumb:hover {
    background-color: #666;
  }

  .product-item {
    display: flex;
    align-items: stretch;
    gap: 16px;
    padding: 16px 0;
  }

  .product-item:not(:last-child) {
    border-bottom: 1px solid #e5e5e5;
  }

  .product-image {
    width: 35%;
    aspect-ratio: 3/4;
    height: auto;
    object-fit: cover;
  }

  .product-details {
    flex: 1;

    display: flex;
    flex-direction: column;
  }

  .product-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
  }

  .product-title {
    font-size: 16px;
    font-weight: 500;
    text-transform: uppercase;
    margin: 0;
  }

  .product-details .product-description,
  .product-details .product-description p {
    font-size: 12px;
    margin-bottom: 0;
    color: black;
  }

  .product-price {
    font-size: 14px;
    color: #000;
    display: flex;
    flex-direction: column;
  }

  .product-price-value {
    line-height: 1;
    color: red;
  }

  .product-compare-price {
    line-height: 1;
    color: #000;
    text-decoration: line-through;
  }

  .product-actions {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-top: 12px;
    margin-top: auto;
  }

  .variant-select {
    font-size: 13px;
    padding: 6px 8px;
    border: none;
    background: transparent;
  }

  .variant-select:focus {
    outline: none;
    box-shadow: none;
  }

  .one-size {
    font-size: 13px;
    color: #666;
  }

  .add-to-cart-btn {
    margin-left: auto;
    background: transparent;
    border: 1px solid #000;
    padding: 6px 14px;
    font-size: 13px;
    cursor: pointer;
    min-width: 60%;
  }

  .add-to-cart-btn.disabled {
    opacity: 0.5;
  }

  .product-actions .add-to-cart-btn:not(.disabled):hover {
    background: #000;
    color: #fff;
  }

  .product-actions .one-size {
    line-height: 1.2;
    color: black;
  }

  @media (max-width: 768px) {
    .modal-content {
      flex-direction: column;
      height: 95vh;
      gap: 20px;
    }

    .look-image,
    .product-list {
      width: 100%;
    }

    .product-list {
      padding-left: 0;
      padding-right: 0;
    }

    .product-title {
      font-size: 14px;
    }

    .look-image {
      height: 45%;
    }

    .product-list {
      height: 55%;
      padding: 0 0 20px 0;
    }

    .add-to-cart-btn {
      font-size: 12px;
    }
  }

  @media (max-width: 480px) {
    .add-to-cart-btn {
      font-size: 10px;
    }

    .product-item {
      gap: 10px;
    }

    .product-actions {
      gap: 8px;
    }

    .product-price {
      font-size: 12px;
    }
  }
</style>

<script>
  const cart = document.querySelector('cart-notification') || document.querySelector('cart-drawer');

  function openModal() {
    document.getElementById('lookbookModal').style.display = 'flex';
    document.body.style.overflow = 'hidden';
  }

  function closeModal() {
    console.log('closeModal');
    document.getElementById('lookbookModal').style.display = 'none';
    document.body.style.overflow = 'auto';
  }

  async function fetchCartDrawerHtml() {
    const url = `/?section_id=cart-drawer&sections_url=/cart`;
    try {
      const response = await fetch(url);

      const data = await response.text();

      return data;
    } catch (error) {
      console.error('Error fetching cart drawer:', error);
    }
  }

  async function fetchCartIconBubbleHtml() {
    const url = `/?section_id=cart-icon-bubble&sections_url=/cart`;
    try {
      const response = await fetch(url);
      const data = await response.text();
      return data;
    } catch (error) {
      console.error('Error fetching cart icon bubble:', error);
    }
  }

  document.querySelector('.shop-the-look-btn').addEventListener('click', openModal);
  window.onclick = function (event) {
    if (event.target == document.getElementById('lookbookModal')) {
      closeModal();
    }
  };

  // close upon clicking the close button
  document.querySelector('.close-button').addEventListener('click', function () {
    closeModal();
  });

  document.querySelectorAll('.add-to-cart-btn:not(.disabled)').forEach((button) => {
    button.addEventListener('click', async (e) => {
      e.preventDefault();

      const container = button.closest('.product-actions');
      const variantInput = container.querySelector('.variant-select');
      const variantId = variantInput.value;

      try {
        const response = await fetch('/cart/add.js', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            items: [{ id: variantId, quantity: 1 }],
          }),
        });

        const data = await response.json();
        console.log('Product added', data);

        // close the modal
        closeModal();
        // fetch cart drawer html
        const cartDrawerHtml = await fetchCartDrawerHtml();
        const cartIconBubbleHtml = await fetchCartIconBubbleHtml();

        const sections = cart.getSectionsToRender().map((section) => section.id);
        sections['cart-drawer'] = cartDrawerHtml;

        const sectionsObject = {
          'cart-drawer': cartDrawerHtml,
          'cart-icon-bubble': cartIconBubbleHtml,
        };

        console.log('sectionsObject', sectionsObject);

        // Emit custom cart:change event
        const cartChangeEvent = new CustomEvent('cart:change', {
          detail: { id: variantId, sections: sectionsObject },
        });
        window.dispatchEvent(cartChangeEvent);
      } catch (error) {
        console.error('Error adding product to cart:', error);
      }
    });
  });
</script>
