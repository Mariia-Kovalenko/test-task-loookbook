{{ 'lookbook.css' | asset_url | stylesheet_tag }}
<script src="{{ 'lookbook.js' | asset_url }}" defer="defer"></script>

{% liquid
  assign products = products | default: section.settings.products
  assign image = image | default: section.settings.image
%}

<div id="lookbookModal" class="modal" role="dialog" aria-modal="true" aria-labelledby="lookbookModalTitle">
  <div class="modal-content" style="background-color: {{ background_color }};">
    {% comment %} close button - mobile only {% endcomment %}
    <button class="close-button">
      <span class="close-button-icon">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M18 6L6 18" stroke="black" stroke-width="2" stroke-linecap="round"/>
          <path d="M6 6L18 18" stroke="black" stroke-width="2" stroke-linecap="round"/>
        </svg>
      </span>
    </button>
    <div class="look-image">
      <img src="{{ image | img_url: 'master' }}" alt="Look Image">
    </div>
    <div class="product-list" style="overflow-y: auto; max-height: 100%;">
      {% for product in products %}
        <div class="product-item">
          <img
            src="{{ product.featured_image | image_url: width: 300 }}"
            alt="{{ product.title }}"
            class="product-image"
          >

          <div class="product-details">
            <div class="product-content">
              <div class="product-header">
                <h3 class="product-title">{{ product.title }}</h3>
                <span class="product-price">
                  <span class="product-price-value">{{ product.price | money }}</span>
                  {% if product.compare_at_price > product.price %}
                    <span class="product-compare-price">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                </span>
              </div>

              <div class="product-description">
                {{ product.description | truncate: 100 }}
              </div>
            </div>

            <div class="product-actions">
              {% if product.variants.size > 1 %}
                <select id="variant-select-{{ product.id }}" class="variant-select" tabindex="0">
                  {% for variant in product.variants %}
                    <option value="{{ variant.id }}">{{ variant.title }}</option>
                  {% endfor %}
                </select>
              {% else %}
                <span class="one-size">One size</span>
                <input type="hidden" value="{{ product.variants.first.id }}" class="variant-select">
              {% endif %}

              {% comment %} if available {% endcomment %}
              {% if product.available %}
                <button
                  class="add-to-cart-btn"
                  data-product-id="{{ product.id }}"
                >
                  Add to bag
                </button>
              {% else %}
                {% comment %} if not available {% endcomment %}
                <button class="add-to-cart-btn disabled" disabled>Sold out</button>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
