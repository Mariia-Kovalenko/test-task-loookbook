<div 
    style="background-color: {{ section.settings.background_color }};"
    class="lookbook-section {% if section.settings.alignment == 'right' %}right{% else %}left{% endif %}">
    <div class="lookbook-content">
  
      <div class="lookbook-media">
        <div class="lookbook-image-wrapper">
            <img
            src="{{ section.settings.image | img_url: 'master' }}"
            alt="Lookbook Image"
            class="lookbook-image"
            />
        </div>
  
        <button type="button" class="shop-the-look-btn">
          Shop the look
        </button>
      </div>
  
      <div class="lookbook-text">
        {{ section.settings.text }}
      </div>
  
      {% render 'lookbook-modal',
        products: section.settings.products,
        image: section.settings.image,
        background_color: section.settings.modal_background_color
      %}
    </div>
  </div>
  

<style>
    .lookbook-section {
        width: 100%;
        padding: 60px 40px;
        box-sizing: border-box;
        padding: 0;
        height: 100vh;
      }
      
      .lookbook-content {
        display: flex;
        align-items: start;
        gap: 80px;
        max-width: 1400px;
        margin: 0 auto;
        height: 100%;
      }
      
      .lookbook-section.right .lookbook-content {
        flex-direction: row-reverse;
      }
      
      .lookbook-media {
        width: 50%;
        height: 100%;
        display: flex;
        flex-direction: column;
      }
      
      .lookbook-image-wrapper {
        flex: 1;
        min-height: 0;        
        overflow: hidden;
      }
      
      .lookbook-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
      }
      
      .shop-the-look-btn {
        margin-top: 12px;
        margin-bottom: 12px;
        padding: 0;
        background: none;
        border: none;
        font-size: 14px;
        text-transform: lowercase;
        cursor: pointer;
        text-decoration: underline;
        color: #000;
      }
      
      
      .lookbook-text {
        width: 35%;
        font-size: 14px;
        line-height: 1.6;
        color: #333;
        text-align: center;
        align-self: center;
      }
      
      @media (max-width: 768px) {
        .lookbook-content {
          flex-direction: column;
          gap: 32px;
        }

        .lookbook-section {
        height: auto;}
      
        .lookbook-media,
        .lookbook-text {
          width: 100%;
        }
      
        .lookbook-text {
          padding: 0 20px 50px 20px;
        }
      }
      
</style>

{% schema %}
{
  "name": "Lookbook",
  "settings": [
    {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#f5f5f5"
    },
    {
        "type": "color",
        "id": "modal_background_color",
        "label": "Modal Background Color",
        "default": "#f5f5f5"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Select Image"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text Description",
      "default": "Our latest collection demonstrates an elegant eccentricity â€” bold patterns inspired by traditional nomadic dressing, embroidered buttons, ceramic detailing and artisanal stitching contrast with stark, clean-lined silhouettes that showcase refined modernity."
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Image Alignment",
      "options": [
        {"value": "left", "label": "Left"},
        {"value": "right", "label": "Right"}
      ],
      "default": "left"
    },
    {
      "type": "product_list",
      "id": "products",
      "label": "Products",
      "limit": 10
    }
  ],
  "presets": [
    {
      "name": "Lookbook"
    }
  ]
}
{% endschema %}
