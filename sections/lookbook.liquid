{{ 'lookbook.css' | asset_url | stylesheet_tag }}

<section
  style="background-color: {{ section.settings.background_color }};"
  class="lookbook-section {% if section.settings.alignment == 'right' %}right{% else %}left{% endif %}"
>
  <div class="lookbook-content">
    <div class="lookbook-media">
      <div class="lookbook-image-wrapper">
        <img
          src="{{ section.settings.image | img_url: 'master' }}"
          alt="Lookbook Image"
          class="lookbook-image"
        >
      </div>

      <button type="button" class="shop-the-look-btn">Shop the look</button>
    </div>

    <div class="lookbook-text">
      {{ section.settings.text }}
    </div>

    {% render 'lookbook-modal',
      products: section.settings.products,
      image: section.settings.image,
      background_color: section.settings.modal_background_color
    %}
  </div>
</section>

{% schema %}
{
  "name": "Lookbook",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f5f5f5"
    },
    {
      "type": "color",
      "id": "modal_background_color",
      "label": "Modal Background Color",
      "default": "#f5f5f5"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Select Image"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text Description",
      "default": "Our latest collection demonstrates an elegant eccentricity â€” bold patterns inspired by traditional nomadic dressing, embroidered buttons, ceramic detailing and artisanal stitching contrast with stark, clean-lined silhouettes that showcase refined modernity."
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Image Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "product_list",
      "id": "products",
      "label": "Products"
    }
  ],
  "presets": [
    {
      "name": "Lookbook"
    }
  ]
}
{% endschema %}
